{% extends 'base.html.twig' %}

{% block title %}Meme Products{% endblock %}

{% block body %}
    <h1>Meme Products</h1>

    <a href="{{ path('app_meme_product_new') }}">Create New Product</a>

    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Price</th>
                <th>Rare</th>
                <th>Category ID</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.isRare ? 'Yes' : 'No' }}</td>
                <td>{{ product.categoryId }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
